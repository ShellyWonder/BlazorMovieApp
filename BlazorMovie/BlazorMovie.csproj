    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="8.0.10" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Components\UIComponents\SearchResultsComponent.razor" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Components\UIComponents\SearchResultsComponent.razor" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Components\UIComponents\SearchComponents\" />
  </ItemGroup>

</Project>
