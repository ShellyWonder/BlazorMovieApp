    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

	  <NoWarn>NU1901, NU1902, NU1903</NoWarn>

  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Components\Layout\NewFolder\**" />
